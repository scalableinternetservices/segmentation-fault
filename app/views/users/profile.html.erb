<p id="notice"><%= notice %></p>

<h1><%= current_user.email %></h1>
<%= link_to 'Edit Account', edit_user_registration_path %>

<h3>Posts</h3>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Images</th>
    <th>Description</th>
    <th>Price</th>
    <th>Availability</th>
    <th>Restrictions</th>
    <th>Category</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.description %></td>
        <td><%= post.price %></td>
        <td><%= post.availability %></td>
        <td><%= post.restrictions %></td>
        <td><%= post.categories %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>


<h3>Bookings</h3>
<table>
  <thead>
  <tr>
    <th>User</th>
    <th>Post</th>
    <th>Transaction</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @bookings.includes(:post).each do |booking| %>
      <tr>
        <td><%= booking.user_id %></td>
        <td><%= booking.post_id %></td>
        <td><%= booking.transaction_id %></td>
        <td><%= link_to 'Show', booking.post %></td>
      </tr>
  <% end %>
  </tbody>
</table>


<br>
