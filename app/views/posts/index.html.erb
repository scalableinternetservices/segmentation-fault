<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Images</th>
      <th>Description</th>
      <th>Price</th>
      <th>Availability</th>
      <th>Restrictions</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.description %></td>
        <td><%= post.price %></td>
        <td><%= post.availability %></td>
        <td><%= post.restrictions %></td>
        <td><%= post.categories %></td>
        <td><%= link_to 'Show', post %></td>
        <% if ((current_user != nil) && (current_user.id == post.user_id)) %>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
